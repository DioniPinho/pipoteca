<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.MovieDetailsActivity">

    <ImageView
        android:id="@+id/iv_details_movies_picture"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_pipoteca" />

    <TextView
        android:id="@+id/text_details_movie_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="title"
        android:paddingLeft="10dp"
        android:gravity="bottom|fill"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/text_row_gradient"
        android:textAllCaps="true"
        android:layout_alignBottom="@+id/iv_details_movies_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
       />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_details_movies_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/text_details_movie_sinopse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="sinopse"
            android:textSize="18sp"
            android:scrollbars="none"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/iv_details_movies_picture"
            android:textAlignment="center"
           android:paddingBottom="20dp"/>
    </ScrollView>


    <ImageButton
        android:id="@+id/ib_details_movie_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_heart_not_favorited"
        android:background="@null"
        android:layout_above="@+id/text_details_movie_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>