<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/colorBgRecyclerFavorite"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/iv_favorite_movie_picture"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_pipoteca" />

    <TextView
        android:id="@+id/text_favorite_movie_title"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:textColor="@color/colorTextPrimary"
        android:layout_toRightOf="@+id/iv_favorite_movie_picture"
        android:layout_toEndOf="@+id/iv_favorite_movie_picture"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>
